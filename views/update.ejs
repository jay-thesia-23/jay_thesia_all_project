        <td><input type="text" name="phone_number" value="<%=data[i].phone_number%>"></td>
        <td><input type="text" name="city" value="<%=data[i].city%>"></td>

      
        <td>
          <a
            class="btn btn-danger"
            id="<%=data[i].candidate_id%>"
            onclick="check(this.id)"
